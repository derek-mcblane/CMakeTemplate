{
  "version": 6,
  "configurePresets": [
    {
        "name": "base",
        "hidden": true,
        "binaryDir": "${sourceDir}/build/${presetName}",
        "installDir": "${sourceDir}/install/${presetName}",
        "cacheVariables": {
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
    },
    {
      "name": "debug",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "jobs": 8
    },
    {
      "name": "release",
      "configurePreset": "release",
      "jobs": 8
    },
    {
      "name": "debug-install",
      "configurePreset": "debug",
      "targets": "install"
    },
    {
      "name": "release-install",
      "configurePreset": "release",
      "targets": "install"
    },
    {
      "name": "debug-doxygen",
      "configurePreset": "debug",
      "targets": "doxygen"
    },
    {
      "name": "release-doxygen",
      "configurePreset": "release",
      "targets": "doxygen"
    }
  ],
  "workflowPresets": [
    {
        "name": "release",
        "displayName": "release - build and install",
        "description": "configure, build, and install the release configuration",
        "steps": [
            {
                "type": "configure",
                "name": "release"
            },
            {
                "type": "build",
                "name": "release"
            },
            {
                "type": "build",
                "name": "release-install"
            }
        ]
    },
    {
        "name": "debug",
        "displayName": "debug - build and install",
        "description": "configure, build, and install the debug configuration",
        "steps": [
            {
                "type": "configure",
                "name": "debug"
            },
            {
                "type": "build",
                "name": "debug"
            },
            {
                "type": "build",
                "name": "debug-install"
            }
        ]
    },
    {
        "name": "release-doxygen",
        "displayName": "release - Doxygen documentation",
        "description": "configure, generate documentation with Doxygen",
        "steps": [
            {
                "type": "configure",
                "name": "release"
            },
            {
                "type": "build",
                "name": "release-doxygen"
            }
        ]
    },
    {
        "name": "debug-doxygen",
        "displayName": "debug - Doxygen documentation",
        "description": "configure, generate documentation with Doxygen",
        "steps": [
            {
                "type": "configure",
                "name": "debug"
            },
            {
                "type": "build",
                "name": "debug-doxygen"
            }
        ]
    }
  ]
}
